[color]
  ui = true
[core]
  excludesfile = ~/.gitignore
  editor = vim -f
  autocrlf = false
[alias]
  a = add
  amend = commit -v --amend
  br = branch
  c = commit -v
  ca = commit -av
  cv = commit -v
  d = diff --word-diff
  dc = diff --word-diff --cached
  empty = !"git commit -a -m '' --allow-empty-message"
  empty-message = !"git commit -a -m '' --allow-empty-message"
  fixup = commit --amend --no-edit --allow-empty-message
  l = !"PAGER='' git log --graph --pretty=format:'%Cred%h%Creset %an: %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative -10 && echo"
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  lo = !"PAGER='' git log --oneline --stat -5"
  pr = pull --rebase
  s = status -sb
  savelog = !"git log --graph --pretty=format:'%h %an: %s - %d (%cr)' --abbrev-commit --date=relative > log"
  unstash = !"git stash pop"
[push]
  default = tracking
[help]
  autocorrect = 1
[credential]
  helper = cache --timeout=3600

; vim:ft=gitconfig:

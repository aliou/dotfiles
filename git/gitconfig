[user]
  email = code@aliou.me
  name = Aliou Diallo
[color]
  ui = true
[core]
  excludesfile = ~/.gitignore
  editor = vim -f
  autocrlf = false
[alias]
  a = add
  amend = commit -v --amend
  br = branch
  c = commit -v
  ca = commit -av
  d = diff --word-diff
  dc = diff --word-diff --cached
  empty = !"git commit -a -m '' --allow-empty-message"
  empty-message = !"git commit -a -m '' --allow-empty-message"
  fixup = commit --amend --no-edit --allow-empty-message
  ghost = !"git status -s | grep \"^ D\" | cut -d ' ' -f 3- | xargs git rm"
  l = !"PAGER='' git log --graph --pretty=format:'%Cred%h%Creset %an: %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative -10 && echo"
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  rv = remote -v
  s = status -sb
  unstash = !"git stash pop"
[push]
  default = tracking
[help]
  autocorrect = 1
[credential]
  helper = cache --timeout=3600

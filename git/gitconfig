[user]
  email = code@aliou.me
  name  = Aliou Diallo
[commit]
  gpgsign = true
  verbose = true
[include]
  # Contains custom config for the current machine.
  path = config.local
[color]
  ui = true
[core]
  autocrlf     = false
[alias]
  amend         = commit -v --amend
  br            = branch
  branches      = branch -a
  bv            = !"git for-each-ref --format='%(refname:short), %(upstream:short)' refs/heads | column -t -s ','"
  c             = commit -v
  ca            = commit -av
  conflicted    = diff --name-only --diff-filter=U
  d             = diff
  dad           = add
  dc            = diff --cached
  dl            = show --pretty=oneline
  empty         = !"git commit -a -m '' --allow-empty --allow-empty-message"
  empty-commit  = !"git commit --allow-empty"
  empty-message = !"git commit -a -m '' --allow-empty-message"
  filediff      = diff --name-only
  fixup         = commit --amend --no-edit --allow-empty-message
  ghost         = !"git status -s | grep \"^ D\" | cut -d ' ' -f 3- | xargs git rm"
  l             = !"PAGER='' git lo && echo"
  last          = log -1
  latest        = log -1
  lo            = log --graph --pretty=format:'%Cred%h%Creset %an (%GK): %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative -10 --decorate
  rv            = remote -v
  s             = status -sb
  tags          = tag
  undo          = reset HEAD~1
  unstash       = !"git stash pop"
  untracked     = !"git ls-files --others --exclude-standard"
  vr            = branch
[push]
  default = tracking
[help]
  autocorrect = 1
[credential]
  helper = osxkeychain
[init]
  templatedir = ~/.dotfiles/git/templates
[filter "lfs"]
  smudge   = git-lfs smudge %f
  required = true
  clean    = git-lfs clean %f
[pager]
  diff = diff-highlight | less
  log  = diff-highlight | less
  show = diff-highlight | less
[interactive]
  diffFilter = diff-highlight
[diff]
  compactionHeuristic = true
  colorMoved = zebra
[tag]
  sort = version:refname
[gpg]
  program = /usr/local/bin/gpg
[advice]
  waitingForEditor = false

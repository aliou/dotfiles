[color]
  ui = true
[core]
  excludesfile = ~/.gitignore
  editor = vim -f
  autocrlf = false
[alias]
  a = add
  amend = commit -v --amend
  c = commit -v
  ca = commit -av
  commit = commit -v
  cv = commit -v
  d = diff --word-diff
  dc = diff --word-diff --cached
  l = log --graph --pretty=format:'%Cred%h%Creset %an: %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative -5
  lo = log --oneline --stat -5
  s = status -sb
  unstash = !"git stash pop"
[push]
  default = tracking

; vim:ft=gitconfig:

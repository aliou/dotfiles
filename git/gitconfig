[user]
  email = code@aliou.me
  name  = Aliou Diallo
[commit]
  gpgsign = true
[include]
  path = ~/.gitconfig.local
[color]
  ui = true
[core]
  autocrlf     = false
  excludesfile = ~/.gitignore
[alias]
  amend         = commit -v --amend
  br            = branch
  branches      = branch -a
  c             = commit -v
  ca            = commit -av
  conflicted    = diff --name-only --diff-filter=U
  d             = diff --word-diff
  dc            = diff --cached
  dl            = show --pretty=oneline
  empty         = !"git commit -a -m '' --allow-empty --allow-empty-message"
  empty-commit  = !"git commit --allow-empty"
  empty-message = !"git commit -a -m '' --allow-empty-message"
  filediff      = diff --name-only
  fixup         = commit --amend --no-edit --allow-empty-message
  ghost         = !"git status -s | grep \"^ D\" | cut -d ' ' -f 3- | xargs git rm"
  l             = !"PAGER='' git lo && echo"
  last          = log -1
  latest        = log -1
  lo            = log --graph --pretty=format:'%Cred%h%Creset %an (%GK): %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative -10 --decorate
  me            = log --author='Aliou Diallo' --color --pretty=format:'%h - %s (%cr)' --reverse --all
  mefull        = log --author='Aliou Diallo' --color --reverse --all
  rv            = remote -v
  s             = status -sb
  tags          = tag
  today         = !"git me --since=midnight"
  todayfull     = !"git mefull --since=midnight"
  undo          = reset HEAD~1
  unstash       = !"git stash pop"
  untracked     = !"git ls-files --others --exclude-standard"
  vr            = branch
  wip           = !"git add . && git commit -m 'WIP'"
[push]
  default = tracking
[help]
  autocorrect = 1
[credential]
  helper = osxkeychain
[init]
  templatedir = ~/.dotfiles/git/templates
[filter "lfs"]
  smudge   = git-lfs smudge %f
  required = true
  clean    = git-lfs clean %f
[pager]
  diff = diff-highlight | less
  log  = diff-highlight | less
  show = diff-highlight | less
[interactive]
  diffFilter = diff-highlight
[diff]
  compactionHeuristic = true
[gpg]
  program = /usr/local/bin/gpg1

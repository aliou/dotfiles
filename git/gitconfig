[user]
  email = code@aliou.me
  name  = Aliou Diallo
[github]
  user = aliou
[commit]
  verbose = true
  cleanup = scissors
[include]
  # Contains custom config for the current machine.
  path = config.local
[color]
  ui = true
[core]
  autocrlf       = false
  excludesfile   = /Users/alioudiallo/.config/git/ignore
  attributesfile = /Users/alioudiallo/.config/git/attributes
[alias]
  amend         = commit -v --amend
  br            = branch
  branches      = branch -a
  c             = commit -v
  conflicted    = diff --name-only --diff-filter=U
  d             = diff --ignore-all-space
  dc            = diff --cached --ignore-all-space
  dl            = show --pretty=oneline --ignore-all-space
  empty         = !"git commit -a -m '' --allow-empty --allow-empty-message"
  empty-commit  = !"git commit --allow-empty"
  empty-message = !"git commit -a -m '' --allow-empty-message"
  filediff      = diff --name-only
  ghost         = !"git status -s | grep \"^ D\" | cut -d ' ' -f 3- | xargs git rm"
  l             = log --graph --pretty=format:'%Cred%h%Creset %an: %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative -10 --decorate
  mru           = for-each-ref --sort=-committerdate --count=10 refs/heads/ --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'
  root          = rev-parse --show-toplevel
  rv            = remote -v
  s             = status -sb
  set-upstream  = !git branch --set-upstream-to=origin/`git symbolic-ref --short HEAD`
  tags          = tag
  undo          = reset HEAD~1
  unstash       = !"git stash pop"
  untracked     = !"git ls-files --others --exclude-standard"
  vr            = branch
[push]
  default = tracking
[help]
  autocorrect = 1
[credential]
  helper = osxkeychain
[init]
  templatedir = ~/.dotfiles/git/templates
[filter "lfs"]
  smudge   = git-lfs smudge %f
  required = true
  clean    = git-lfs clean %f
[pager]
  diff = diff-highlight | less
  log  = diff-highlight | less
  show = diff-highlight | less
[interactive]
  diffFilter = diff-highlight
  singleKey=1
[diff]
  compactionHeuristic = true
  colorMoved = zebra
  noprefix = true
[tag]
  sort = version:refname
[advice]
  waitingForEditor = false
[rebase]
  autosquash = true
[fixup]
  fzfOptions = --height 40% --reverse

; vim:ft=gitconfig tw=0

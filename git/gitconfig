[user]
  email = code@aliou.me
  name  = Aliou Diallo
[commit]
  gpgsign = true
[include]
  path = ~/.gitconfig.local
[color]
  ui = true
[core]
  autocrlf     = false
  excludesfile = ~/.gitignore
[alias]
  amend         = commit -v --amend
  br            = branch
  branches      = branch -a
  c             = commit -v
  ca            = commit -av
  conflicted    = diff --name-only --diff-filter=U
  d             = diff --word-diff
  dc            = diff --cached
  dl            = show --pretty=oneline
  empty         = !"git commit -a -m '' --allow-empty --allow-empty-message"
  empty-commit  = !"git commit --allow-empty"
  empty-message = !"git commit -a -m '' --allow-empty-message"
  fixup         = commit --amend --no-edit --allow-empty-message
  ghost         = !"git status -s | grep \"^ D\" | cut -d ' ' -f 3- | xargs git rm"
  l             = !"PAGER='' git lo && echo"
  lo            = log --graph --pretty=format:'%Cred%h%Creset %an (%GK): %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative -10 --decorate
  me            = log --author='Aliou Diallo' --color --pretty=format:'%h - %s (%cr)' --reverse --all
  mefull        = log --author='Aliou Diallo' --color --reverse --all
  repush        = !"git fixup && git push -f"
  rv            = remote -v
  s             = status -sb
  tags          = tag
  today         = !"git me --since=midnight"
  todayfull     = !"git mefull --since=midnight"
  undo          = reset HEAD~1
  unstash       = !"git stash pop"
  vr            = branch
[push]
  default = tracking
[help]
  autocorrect = 1
[credential]
  helper = cache --timeout=3600
[init]
  templatedir = ~/.dotfiles/git/templates
[filter "lfs"]
  smudge = git-lfs smudge %f
  required = true
  clean = git-lfs clean %f
